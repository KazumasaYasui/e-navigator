<h1>ユーザー一覧</h1>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>Eメール</th>
      <th>年齢</th>
      <th>性別</th>
      <th>学校名</th>
      <th>面接日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.sex_i18n %></td>
        <td><%= user.school_name %></td>
        <% user.interviews.each do |interview| %>
          <% if interview.approval? %>
            <td><%= interview.interview_datetime %></td>
          <% end %>
        <% end %>
        <td><%= link_to "面接一覧", user_interviews_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
